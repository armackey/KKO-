     <div class="col-md-4 col-md-offset-1 text-center">
          <div id='loginForm'>
              <%= form_for @user, url: contact_path do |f| %>

                <%= f.text_field :name, placeholder: "First Name", class: 'form-control '  %>
                <br>
                <%= f.text_field :lastname, placeholder: "Last Name", class: 'form-control ' %>
                <br>
                <%= f.text_field :email, placeholder: "Email", class: 'form-control ' %>
                <br>
                <%= f.text_field :subject, placeholder: "Subject", class: 'form-control ' %>
                <br>
                <%= f.text_area :content, placeholder: "Message", class: 'form-control ', rows: '5' %>
                <br>
                <%= f.submit "Send", :class => "btn btn-lg btn-primary" %>
                <% end %>
          </div>
      </div>
</div>

